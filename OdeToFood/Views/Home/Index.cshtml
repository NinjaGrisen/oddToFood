@model OdeToFood.ViewModels.HomePageViewModel

@{
    ViewBag.Title = "Home";
}

<h1>hi</h1>
<table>
    @foreach (var resturant in Model.Resturants)
    {
        <tr>
            <td>@resturant.Name</td>
            <td>@resturant.Cuisine</td>
            <td>
                @*@Html.ActionLink(resturant.Id.ToString(), "Details", new { id = resturant.Id })*@
                <a asp-action="Details" asp-route-id="@resturant.Id">Details</a>
                <a asp-action="Edit" asp-route-id="@resturant.Id">Edit</a>
                @resturant.Id
            </td>
            
        </tr>
    }
</table>

@* asp-controller is not needed if the same controller renders both views *@
<a asp-controller="Home" asp-action="Create">Create</a>


@section footer {
    <h3>@Model.CurrentGreeting</h3>
}